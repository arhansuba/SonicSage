# Application Environment
NODE_ENV=development

# Solana/Sonic Configuration
REACT_APP_RPC_URL=https://api.mainnet-alpha.sonic.game
REACT_APP_TESTNET_RPC_URL=https://api.testnet.sonic.game
REACT_APP_EXPLORER_URL=https://explorer.sonic.game

# API Keys (Development Only - Do NOT store private keys in production frontend code)
REACT_APP_PRIVATE_KEY=your_wallet_private_key_here
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_JUPITER_API_KEY=your_jupiter_api_key_here

# Server Configuration (Backend Only)
PORT=5000
SERVER_HOST=localhost
CORS_ORIGIN=http://localhost:3000

# Server Wallet (Only used by backend services)
SERVICE_WALLET_PRIVATE_KEY=your_service_wallet_private_key_here

# Authentication Settings
JWT_SECRET=your_jwt_secret_for_auth_tokens
TOKEN_EXPIRY=24h

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_PORTFOLIO_REBALANCING=true

# Default Risk Profile (conservative, moderate, aggressive)
DEFAULT_RISK_PROFILE=moderate

# Jupiter Settings
JUPITER_PLATFORM_FEE_BPS=0
JUPITER_FEE_ACCOUNT=your_fee_account_if_using

# Logging
LOG_LEVEL=info

# IMPORTANT NOTES: 
# 1. Rename this file to .env before using
# 2. Never commit .env files with real keys to source control
# 3. In production, use environment variables set on the server
# 4. For frontend deployment, use REACT_APP_ prefix for variables
# 5. For secure key management in production, use a secret manager